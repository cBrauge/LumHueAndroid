<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lumhue.karskrin.lumhue">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.BaseActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Activity.LightsActivity"
            android:label="@string/title_activity_lights"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Activity.LightActivity"
            android:label="@string/title_activity_lights"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Activity.AmbiancesActivity"
            android:label="@string/title_activity_ambiance"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Activity.AmbianceActivity"
            android:label="@string/title_activity_ambiance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.BeaconActivity"
            android:label="@string/title_activity_beacon"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Activity.SyncsActivity"
            android:label="@string/title_activity_beacon"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Activity.SyncActivity"
            android:label="@string/title_activity_sync"
            android:theme="@style/AppTheme.Dark" />
    </application>

</manifest>
